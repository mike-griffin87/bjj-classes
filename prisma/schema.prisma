generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Use pooled 6543 for Prisma Client at runtime
  url       = env("DATABASE_URL")
  // Use direct 5432 for migrate/db push
  directUrl = env("DIRECT_URL")
}

model Class {
  id          Int      @id @default(autoincrement())
  date        DateTime
  classType   String
  instructor  String?
  technique   String?
  description String?
  hours       Float?
  style       String?  // "gi" or "nogi"
  url         String?
  createdAt   DateTime @default(now())
  performance   Performance @default(OK)
  performanceNotes String?

  @@map("classes")
}

enum Performance {
  BAD   @map("BAD")
  OK    @map("OK")
  GREAT @map("GREAT")
}